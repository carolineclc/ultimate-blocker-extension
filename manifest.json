{
    "browser_action": {
      "browser_style": true,
      "default_title": "Ultimate Blocker Extension",
      "default_popup": "popup/popup.html"
    },
  
    "description": "Blocker",
    "manifest_version": 2,
    "name": "Ultimate Blocker Extension",
    "version": "1.0",
  
    "icons": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "64": "icons/64.png"
    },
  
    "permissions": ["cookies",
    "<all_urls>",
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"],
  
  
  
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["background.js"]
      }
    ]
  }
  